<!--views/frontend/home.ejs-->

<link rel="stylesheet" href="/styles/frontend/index.css" />

<section class="Index region">
    <header class="header">
        <div class="inner">
            <div class="featured-post">
                <a href="/post/<%= data.items[0].key %>">
                    <img src="<%= data.items[0].thumb %>" />
                    <% if(data.items[0].videos){ %>
                    <% if(data.items[0].videos !== ""){ %>
                    <% if(data.items[0].videos !== "[]"){ %>
                        <img class="play-icon" src="/images/play.png" />
                    <% } %>
                    <% } %>
                    <% } %>
                    <p class="title">
                        <%= data.items[0].title %>
                    </p>
                </a>
            </div>
            <div class="title">
                <a href="/"><%= data.siteTitle %></a>
                <p class="description"><%= data.description %></p>
            </div>
            <div class="featured-post">
                <a href="/post/<%= data.items[1].key %>">
                    <img src="<%= data.items[1].thumb %>" />
                    <% if(data.items[1].videos){ %>
                    <% if(data.items[1].videos !== ""){ %>
                    <% if(data.items[1].videos !== "[]"){ %>
                        <img class="play-icon" src="/images/play.png" />
                    <% } %>
                    <% } %>
                    <% } %>
                    <p class="title">
                        <%= data.items[1].title %>
                    </p>
                </a>
            </div>
        </div>
    </header>

    <nav class="nav region">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/styles/frontend/menu.css" />
        <%
        let home = ''
        let sandwiches = ''
        let cereals = ''
        let soups = ''
        let desserts = ''
        let contact = ''
        let about = ''

        if(data.route === '/'){
            home = 'active'
        }else if(data.type === "Sandwiches"){
            sandwiches = 'active'
        }else if(data.type === "Cereals"){
            cereals = "active"
        }else if(data.type === "Soups"){
            soups = "active"
        }else if(data.type === "Desserts"){
            desserts = "active"
        }else if(data.route === '/page/1oriwstnm41i'){
            contact = 'active'
        }else if(data.route === '/page/wrwkirgdwbbv'){
            about = 'active'
        }
        %>
        <div class="wrapper">
            <div class="topnav" id="myTopnav">
                <a href="/" class="<%= home %>">Home</a>
                <a href="/category/Sandwiches" class="<%= sandwiches %>">Sandwiches</a>
                <a href="/category/Cereals" class="<%= cereals %>">Cereals</a>
                <a href="/category/Soups" class="<%= soups %>">Soups</a>
                <a href="/category/Desserts" class="<%= desserts %>">Desserts</a>
                <a href="/page/1oriwstnm41i" class="<%= contact %>">Contact</a>
                <a href="/page/wrwkirgdwbbv" class="<%= about %>">About</a>
                <a href="/admin" class="login">Login</a>
                <a href="javascript:void(0)" class="search">
                    <form action="/search" method="post">
                        <input type="text" name="q" required placeholder="Type your word here..." />
                        <input type="submit" value="Search" />
                    </form>
                </a>
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
        </div>
    </nav>
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
            x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="main region">
        <% if(data.route === "/"){ %>
            <%- include("./home") %>
        <% }else if(data.route === "/post"){ %>
            <%- include("./post") %>
        <% }else if(data.route.includes("/page")){ %>
            <%- include("./page") %>
        <% }else if(data.route === "/category"){ %>
            <%- include("./category") -%>
        <% }else if(data.route === "/search"){ %>
            <%- include("./search") %>
        <% }else if(data.route === "/user"){ %>
            <%- include("./user") %>
        <% } %>   
    </div>

    <footer class="footer region">
        <a href="https://khmerweb.deta.dev/">
            &copy; 2022 Apsara Templates
        </a>
    </footer>
</section>
